{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dungeonStomp build (release)",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "DungeonStomp.sln",
                "/property:GenerateFullPaths=true",
                "/t:build",
                "/p:Configuration=Release",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dungeonStomp build (debug)",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "DungeonStomp.sln",
                "/property:GenerateFullPaths=true",
                "/t:build",
                "/p:Configuration=Debug",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dungeonStomp launch",
            "type": "shell",
            "command": "${workspaceFolder}/bin/DungeonStomp.exe",
            "options": {
                "cwd": "${workspaceFolder}/bin"
            },
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "dungeonStomp clean (debug)",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "DungeonStomp.sln",
                "/property:GenerateFullPaths=true",
                "/p:Configuration=Debug",                
                "/t:Clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "dungeonStomp clean (release)",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "DungeonStomp.sln",
                "/property:GenerateFullPaths=true",
                "/p:Configuration=Release",                
                "/t:Clean"
            ],
            "problemMatcher": []
        }
    ]
}